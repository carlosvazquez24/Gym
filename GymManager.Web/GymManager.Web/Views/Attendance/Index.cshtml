@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model GymManager.Web.Models.AttendanceViewModel

@section Head {
    <link href="~/bootstrap/css/attendance.css" rel="stylesheet" />

}


@section Scripts{
    <script src="~/lib/moment.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    <script src="~/jquery-3.7.1.min.js"></script>
    <script src="~/attendance.js"></script>
    <link href="~/bootstrap/css/attendancestyle.css" rel="stylesheet" />


}

<div class="container">



    <div class="container-group-buttons">
        <button href="#" class="check-buttons check-buttons-light active" id="in-button" >Member In</button>
        <button href="#" class="check-buttons check-buttons-light" id="out-button">Member Out</button>
    </div>

    <h3 id="text-check"> Check In </h3>

    <p id="textExplain"> These are the members that are outside of the business. You can register the entry of the member here.  </p>

    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"">
                        Attendance 
                    </h5>
                </div>
                <div class="modal-body">
                    <div id="contenido">

                    </div>
                </div>
            </div>
        </div>
    </div>



    <table class="table" id="dinamic-table">
        <thead>
            <tr>
                <th scope="col">ID </th>
                <th scope="col">Name</th>
                <th scope="col">Last Name</th>
                <th scope="col"> Expiration Date </th>

                <th scope="col"> Status </th>


                <th scope="col" class="desktop"> Rceord Entry </th>

            </tr>
        </thead>
        <tbody>

                    @foreach (var member in Model.MembersOutside)
                    {

                <tr>
                    <th>   @member.Id     </th>
                    <th>   @member.Name     </th>
                    <td>   @member.LastName     </td>

                    <td>   @member.MembershipExpirationDate    </td>

                            @if (@member.MembershipExpirationDate < DateTime.Now)
                            {
                        <td class="col-small"> <span class="badge bg-danger"> Expired </span> </td>
                            }
                            else
                            {
                        <td class="col-small"> <span class="badge bg-success"> Active </span> </td>

                            }


                    <td>

                        <button type="button" class="btn btn-outline-info" onclick="checkin(this)" data-expiration-date="@member.MembershipExpirationDate.ToString("yyyy-MM-dd")" data-id="@member.Id">Check in</button>


                    </td>

                </tr>
                    }


        </tbody>

 
    </table>


</div>



