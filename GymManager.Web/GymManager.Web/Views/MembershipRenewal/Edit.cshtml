@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GymManager.Web.Models.MembershipRenewalViewModel;



@section Head {
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/jquery-ui.structure.min.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/jquery-ui.theme.min.css" rel="stylesheet" />

}

@section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
        <script src="~/lib/jqueryui/jquery-ui.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
        <script src = "~/Views/MembershipRenewal/Edit.js"></script>
}



<div class="container">


    <div class="row">

        <h2 class="mt-2 col-10"> Renew Membership  </h2>

        <div class="col-2">
            <a asp-action="Index" class="btn btn-outline-info float-end mt-5">  Back </a>
        </div>

    </div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="MemberId" />

        <div class="mb-3">
            <label asp-for="MemberName" class="form-label">First Name </label>
            <input type="text" class="form-control" asp-for="MemberName" readonly />
            <span asp-validation-for="MemberName" class="text-danger"> </span>
        </div>

        <div class="mb-3">
            <label asp-for="MemberLastName" class="form-label">Last Name </label>
            <input type="text" class="form-control" asp-for="MemberLastName" readonly/>
            <span asp-validation-for="MemberLastName" class="text-danger"> </span>

        </div>

        <div class="mb-3">
            <label asp-for="MembershipId" class="form-label" style="display: block;">Membership</label>
            <select class="form-control" id="membershipSelect" asp-for="MembershipId">
                @foreach (var membership in Model.MembershipTypes)
                {
                    <option value="@membership.Id" data-months="@membership.Duration">
                        @membership.Name
                    </option>
                }
            </select>
            <span asp-validation-for="MembershipId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RenewalDate" class="form-label">Renewal Expiration Date</label>
            <input type="datetime-local" class="form-control" id="renewalDate" asp-for="RenewalDate" />
            <span asp-validation-for="RenewalDate" class="text-danger"></span>
        </div>





        <button type="submit" class="btn btn-primary mb-3">
            Submit
        </button>


    </form>


</div>
